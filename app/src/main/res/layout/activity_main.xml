<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Distance Demo"
        android:textColor="#e70012"
        android:textStyle="bold"
        android:textSize="14dp"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lat1"
        android:hint="latitude 1 / 2"
        android:textColor="@color/white"
        android:background="#afb1b3"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/long1"
        android:hint="longitude 1 / 2"
        android:textColor="@color/white"
        android:background="#e4e5e5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="Start the trip"
        android:textSize="20dp"
        android:id="@+id/btnstart"
        />

    <Button
        android:id="@+id/btnstop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="Stop the trip"
        android:textSize="20dp"
        app:backgroundTint="#F12554" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/lat_text1"
            android:text="Latitude 1"
            android:textSize="14sp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/lat_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Latitude 2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/long_text1"
            android:text="Longitude 1"
            android:textSize="14sp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/long_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Longitude 2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance in Kilometers"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="#7e0a0a"/>

        <TextView
            android:id="@+id/text_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="60dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#00e712"/>

    </LinearLayout>






</LinearLayout>